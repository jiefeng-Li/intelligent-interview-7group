    <script>
        $(function () {
            let token = localStorage.getItem("token");
            if (!token) {
                $("#nologindiv").show()
                $("#logindiv").hide()
                $(".login_ok").hide()
                $(".login_no_ok").show()
            } else {
                $.ajax({
                    url: "http://localhost:10005/user/getuserinfo",
                    type: "POST",
                    headers: {
                        "token": token
                    },
                    dataType: "json",
                    success: function (r) {
                        if (r.code === 200) {
                            console.log(r.data)
                            $("#nologindiv").hide()
                            $("#logindiv").show()
                            $("#top_account").text(r.data.account)
                            $(".login_ok").show()
                            $(".login_no_ok").hide()
                            $("#index_account").text(r.data.account)
                            $("#login_ok_user_photo_img").attr("src", r.data.avatar)
                        }
                    }
                })
            }
        })
    </script>
