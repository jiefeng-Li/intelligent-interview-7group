<script>
    layui.use(['carousel', 'flow'], function () { //layui 轮播  test1 test2
        var carousel = layui.carousel;
        var flow = layui.flow;
        flow.lazyimg();
        carousel.render({
            elem: '#test1',
            width: '675px',
            height: '315px'
        });

        carousel.render({
            elem: '#test2',
            width: '290px',
            height: '190px',
            indicator: 'none' //指示器属性；隐藏：none，容器内部：inside，容器外部：outside；
        });
    });

    function showDiv2(obj) {
        if ($(obj).attr("class") === "current1") {
